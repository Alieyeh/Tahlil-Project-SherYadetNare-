<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    android:weightSum="1"
    android:orientation="vertical"

    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        />

    <Button
        android:layout_width="273dp"
        android:layout_height="113dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/note"
        android:text="بازی ها"
        android:textColor="@android:color/background_dark"
        android:textSize="35dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:textColor="@android:color/background_light" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/singerNameScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="102dp"
                android:background="@drawable/rounded_corner"
                android:padding="5dp"
                android:text="0"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/songNameScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/rounded_corner"
                android:padding="5dp"
                android:text="0"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/lyricsJumbleScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/rounded_corner"
                android:padding="5dp"
                android:text="0"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/start"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:background="@drawable/rounded_corner"
                android:drawableLeft="@drawable/singer"
                android:text="اسم خواننده"
                android:textSize="25dp"

                />

            <Button
                android:id="@+id/button_song_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_corner"
                android:drawableLeft="@drawable/music"
                android:onClick="goToSongName"
                android:text="اسم اهنگ"
                android:textSize="25dp" />


            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_corner"
                android:drawableLeft="@drawable/j"
                android:onClick="goToLyricsJumble"
                android:text="کلمه های درهم"
                android:textSize="25dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/genree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:background="@drawable/rounded_corner"
        android:onClick="changeGenre"
        android:text="ژانرها"
        android:textSize="20dp" />

</RelativeLayout>
